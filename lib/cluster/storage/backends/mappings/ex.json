{
  "settings": {
    "index.number_of_shards": 5,
    "index.number_of_replicas": 1,
    "analysis": {
      "analyzer": {
        "lowercase_keyword_analyzer": {
          "tokenizer": "keyword",
          "filter": "lowercase"
        }
      }
    }
  },
  "mappings": {
    "ex": {
      "_all": {
        "enabled": false
      },
      "dynamic": false,
      "properties": {
        "job_id": {
          "type": "keyword"
        },
        "ex_id": {
          "type": "keyword"
        },
        "_context": {
          "type": "keyword"
        },
        "_status": {
          "type": "keyword"
        },
        "_has_errors": {
          "type": "boolean"
        },
        "_failureReason": {
          "type": "keyword"
        },
        "slicer_hostname": {
          "type": "keyword"
        },
        "slicer_port": {
          "type": "keyword"
        },
        "_slicer_stats": {
          "type": "object"
        },
        "_created": {
          "type": "date"
        },
        "_updated": {
          "type": "date"
        },
        "name": {
          "type": "text",
          "analyzer": "lowercase_keyword_analyzer"
        },
        "lifecycle": {
          "type": "keyword"
        },
        "workers": {
          "type": "integer"
        },
        "slicers": {
          "type": "integer"
        },
        "probation_window": {
          "type": "integer"
        },
        "assets": {
          "type": "keyword"
        }
      }
    }
  }
}
