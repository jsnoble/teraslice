{
  "settings": {
    "index.number_of_shards": 5,
    "index.number_of_replicas": 1,
    "analysis": {
      "analyzer": {
        "lowercase_keyword_analyzer": {
          "tokenizer": "keyword",
          "filter": "lowercase"
        }
      }
    }
  },
  "mappings": {
    "asset": {
      "_all": {
        "enabled": false
      },
      "dynamic": false,
      "properties": {
        "blob": {
          "type": "keyword",
          "index": false,
          "doc_values": false
        },
        "name": {
          "type": "text",
          "analyzer": "lowercase_keyword_analyzer"
        },
        "version": {
          "type": "keyword"
        },
        "id": {
          "type": "keyword"
        },
        "description": {
          "type": "keyword"
        },
        "_created": {
          "type": "date"
        }
      }
    }
  }
}
